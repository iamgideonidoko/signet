API_PORT=6969
API_HOST=0.0.0.0
ENVIRONMENT=development

# For postgres container (see: docker-compose.yml)
DB_PASSWORD=signet_password

# For local development (outside docker): use localhost
# For docker: use signet-db (container name)
DATABASE_URL=postgresql://signet:signet_password@localhost:5432/signet_db?sslmode=disable
DB_MAX_CONNS=25
DB_MAX_IDLE_CONNS=5

# For local development (outside docker): use localhost
# For docker: use signet-cache (container name)
REDIS_URL=redis://localhost:6379/0
REDIS_CACHE_TTL=48h

# Weighting scoring configuration
SIMILARITY_THRESHOLD=0.75
HARDWARE_WEIGHT=0.8
ENVIRONMENT_WEIGHT=0.5
SOFTWARE_WEIGHT=0.2

RATE_LIMIT_REQUESTS=1000
RATE_LIMIT_WINDOW=1m
RATE_LIMIT_BY_HARDWARE=2000
RATE_LIMIT_HARDWARE_WINDOW=1h

CORS_ORIGINS=http://localhost:3000,http://localhost:6969
TRUSTED_PROXIES=

ENABLE_METRICS=true
LOG_LEVEL=info
