{
  "extends": "@tsconfig/node20/tsconfig.json",
  "compilerOptions": {
    /* Required for tsdown/rolldown speed */
    "isolatedModules": true,

    /* Ensure types are generated in the right spot */
    "outDir": "dist",
    "declaration": true,
    "declarationMap": true,

    /* pnpm compatibility */
    "preserveSymlinks": true,

    /* Modern Library Standards - bundler mode for tsdown */
    "module": "ESNext",
    "moduleResolution": "bundler",

    /* Browser APIs */
    "lib": ["ESNext", "DOM", "DOM.Iterable"]
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist", "**/*.test.ts"]
}
